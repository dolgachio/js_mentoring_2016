<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    <link rel="stylesheet" href="css/main.css"/>
</head>
<body>
    <section class="page">
        <h1>Hello, <%= email%>
            <% if (authorized) { %>
            <a class="btn btn-danger" href="/logout">Logout</a>
            <% } else {%>
            <a class="btn btn-info" href="/login">Login</a>
            <% }%>
        </h1>

        <% if (authorized) {%>
            <h3>Add thoughts</h3>
            <form name="post-form"
                  action="/createPost"
                  method="POST">
                <div class="form-group">
                    <label for="email">title</label>
                    <input name="content" type="text" class="form-control" id="title" placeholder="Enter post title">
                </div>
                <button type="submit" class="btn btn-default">publish</button>
            </form>
        <%}%>

        <%if(posts.length) {%>
        <ul>
        <%for(var i = 0; i < posts.length; i++){%>
            <li>
                <h4><%= posts[i].postedBy.local.email%></h4>
                <div><%= posts[i].title%></div>
            </li>
        <%}%>
        </ul>
        <%}%>

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>
    </section>
</body>
</html>